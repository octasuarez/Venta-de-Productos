@{
    ViewData["Title"] = "Home Page";
    @model List<Producto>
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a Tienda Inglesa</h1>
    <p>Nuestros Productos</p>
</div>

@foreach (Producto p in Model)
{

    <div>
        <p>@p.NombreProducto</p>
        <p>@p.Descripcion</p>
        <p>@p.Precio</p>
        @if (p.Imagenes.Count > 0)
        {
           foreach(var i in p.Imagenes) {
                <div>
                <img src="~/ImagenesProductos/@i.ImagePath" />
                    </div>}
        }
    </div>
   
}

